{
  "compilerOptions": {
    "target": "ESNext",
    "module": "node16",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
    "vite.config.ts",
    "vite.preload.config.ts",
    "vite.renderer.config.ts"
  ],
}
