{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "~/*": ["./src/*"],
      "~/public/*": ["./public/*"]
    }
  }
}
